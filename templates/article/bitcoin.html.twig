{% extends 'base.html.twig' %}

{% block title %}News | General{% endblock %}

{% block body %}
    <h1>News: </h1>
    <div id="articles_container">
        {% if articles is defined %}
            {% for article in articles.articles %}
                <div class="article">
                    <h1>{{ article.title }}</h1>
                    <p>{{ article.description }}</p>
                    <img src="{{ article.urlToImage }}" alt="Article image">
                    <a href="/currentBitcoinArticle/{{ loop.index -1 }}">Voir article</a>
                </div>
            {% endfor %}
        {% endif%}
    </div>
{% endblock %}
